<%= render 'shared/page_header', header: t('common.sign_up') %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="<%= form_element_class %>">
    <%= f.label :email, class: form_label_class %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: form_input_class %>
  </div>

  <div class="<%= form_element_class %>">
    <%= f.label :password, class: form_label_class("mb-0") %>
    <% if @minimum_password_length %>
    <em class="mb-2">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: form_input_class %>
  </div>

  <div class="<%= form_element_class %>">
    <%= f.label :password_confirmation, class: form_label_class %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: form_input_class %>
  </div>

  <div class="<%= form_element_class %>">
    <%= f.submit t('common.sign_up'), class: create_button_class("my-2") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
