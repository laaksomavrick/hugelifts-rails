<%= render 'shared/backable_page_header', header: t('workouts.header') %>

<%= render 'shared/page_subheader', subheader: t('common.details') do %>
  <%= button_to "Delete",
                workout_workout_day_workout_day_exercise_path(@form.workout_id, @form.workout_day_id, @form.workout_day_exercise_id),
                method: :delete,
                form: { data: { turbo_confirm: "Are you sure you want to delete #{@form.workout_day_exercise.exercise.name}?" } },
                class: delete_button_class %>
<% end %>


<%= render 'workout_day_exercises/form',
           model: @form,
           method: :patch,
           url: workout_workout_day_workout_day_exercise_path(@form.workout_id, @form.workout_day_id, @form.workout_day_exercise_id) %>
