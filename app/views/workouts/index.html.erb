<div class="text-3xl font-medium mb-4"><%= t('common.workout') %></div>

<div class="workouts">
  <% @workouts.each do |workout| %>
    <%= link_to edit_workout_path(workout), class: "flex py-2 items-center" do %>
      <div class="text-xl font-medium">
        <%= workout.name %>
      </div>
      <div class="ml-auto <%= workout.active ? "font-bold" : "" %>">
        <%= workout.active ? t('common.active') : t('common.inactive') %>
      </div>
    <% end %>
  <% end %>
</div>
