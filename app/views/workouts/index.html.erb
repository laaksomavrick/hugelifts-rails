<div class="flex items-center mb-4">
      <div class="text-3xl font-medium">
        <%= t('common.workout') %>
      </div>
  <div class="flex ml-auto">
    <%= link_to "Add", new_workout_path, class: default_button_class %>
  </div>
</div>

<div class="workouts">
  <% @workouts.each do |workout| %>
    <%= link_to edit_workout_path(workout), class: "flex py-2 items-center hover:text-blue-600" do %>
      <div class="text-xl">
        <%= workout.name %>
      </div>
      <div class="ml-auto <%= workout.active ? "font-bold" : "" %>">
        <%= workout.active ? t('common.active') : t('common.inactive') %>
      </div>
    <% end %>
  <% end %>
</div>
