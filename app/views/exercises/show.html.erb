<%= render 'shared/page_header', header: t('common.exercise') %>

<div class="flex items-center mb-4">
  <div class="text-2xl font-medium mr-auto"><%= t('common.details') %></div>
  <%= link_to 'Edit', edit_exercise_path(@exercise), class: outline_button_class %>
</div>

<div class="<%= form_element_class %>">
  <%= label_tag :name, t('common.name'), class: form_label_class %>
  <div class="text-lg pb-2"><%= @exercise.name %></div>
</div>

<% if @history.any? %>
<div class="<%= form_element_class %>"data-exercise-history data-exercise-history-entries="<%= @history.to_json %>">
  <%= label_tag :name, t('exercises.show.history'), class: form_label_class %>
  <canvas id="exerciseHistoryChart"></canvas>
</div>
<% else %>
  <%= label_tag :name, t('exercises.show.history'), class: form_label_class %>
  <p class="text-lg pb-2"><%= t('exercises.show.no_workout_history') %></p>
<% end %>