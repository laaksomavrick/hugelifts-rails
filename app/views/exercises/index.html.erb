<div class="flex items-center mb-4">
  <div class="text-3xl font-medium">
    <%= t('exercises.header') %>
  </div>
  <div class="flex ml-auto">
    <%= link_to "Add", new_exercise_path, class: default_button_class %>
  </div>
</div>

<div class="exercises">
  <% @exercises.each do |exercise| %>
    <%= link_to edit_exercise_path(exercise), class: "flex py-2 items-center hover:text-blue-600" do %>
      <div class="text-xl">
        <%= exercise.name %>
      </div>
    <% end %>
  <% end %>

  <div class="my-6 mx-auto max-w-xs">
    <%= paginate @exercises %>
  </div>
</div>
