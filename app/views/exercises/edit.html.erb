<%= render 'shared/backable_page_header', header: t('common.exercise') %>

<div class="flex items-center mb-4">
  <div class="text-2xl font-medium mr-auto"><%= t('common.details') %></div>
  <%= button_to 'Delete', exercise_path(@exercise), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete #{@exercise.name}?" } }, class: delete_button_class %>
</div>

<%= render 'exercises/form',
           model: @exercise,
           method: :patch,
           url: exercise_path %>